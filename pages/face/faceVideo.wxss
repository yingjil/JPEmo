/* pages/faceVideo.wxss */

.img-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 80rpx 0;
  box-sizing: border-box;
}

.open-button-bar {
  position: relative;
  margin-left: 0px;
  margin-top: 10px;
  height: 40px;
  width: 95%;
  background: #01A982;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
}
.open-button-text {
  position: relative;
  margin-top: 9px;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 20px;
  font-size: 16px;
  text-align: center;
  font-weight: 800;
  color: #FFFFFF;
}

.image-view {
  width: 100%; 
  align-items: center;
  display: block;
}

.face-img {
  position: relative;
  width: 100%; 
  height: 360px;
  margin-left: 10px;
  margin-right: 10px;
}
.action-button-bar {
  position: relative;
  margin-top: 20px;
  height: 40px;
  width: 60%; 
  border: 2px solid #01A982;
  border-radius: 12px;
  background: rgba(0, 0, 0, 0.0);
  display: flex;
}
.action-button-bar .action-button-text {
  position: absolute;
  margin-top: 9px;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 20px;
  font-size: 16px;
  text-align: center;
  font-weight: 800;
  color: #01A982;
}

.list-item {
  width: 100%;
  padding: 0px 0px 0px 25px;
  line-height: 104rpx;
  font-size: 34rpx;
  color: #007aff;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.subscribe-input {
  position: relative;
  top: 4px;
  left: -40px;
  padding-left: 5px;
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.submit-bottom-bar {
  position: relative;
  margin-left: 0px;
  margin-top: 10px;
  height: 40px;
  width: 86%;
  background: #01A982;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
}

.submit-button-text {
  position: relative;
  margin-top: 9px;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 20px;
  font-size: 16px;
  text-align: center;
  font-weight: 800;
  color: #FFFFFF;
}
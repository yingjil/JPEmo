.main {
  height: 100vh;
  overflow: hidden;
  box-sizing: border-box;
  padding-bottom: 44rpx;
}

.bg-image {
  width: 100vmax;
  height: 100vmax;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  z-index: -1;
}

.avatar {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 16vmax;
  margin-top: 37.6vmax;
}

.avatar__img-border {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 16.17vmax;
  height: 16.17vmax;
}

.avatar__img {
  width: 15vmax;
  height: 15vmax;
  border-radius: 50%;
}

.tip {
  color: #fff;
  margin-top: 30vmax;
  height: 8.35vmax;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  letter-spacing: 2px;
}

.tip__name {
  font-size: 3.48vmax;
}

.tip__content {
  font-size: 2.1vmax;
}

.options {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 6vmax;
}

.options__gd {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20vmax;
  padding-left: 17vmax;
}


.options__jt {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20vmax;
  padding-right: 20vmax;
}

.options__icon {
  width: 6vmax;
  height: 6vmax;
}

.options__gd-img,
.options__jt-img {
  width: 100%;
  height: 100%;
}

.options__text {
  color: #fff;
  font-size: 2.1vmax;
  margin-top: 6px;
}